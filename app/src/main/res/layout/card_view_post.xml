<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:padding="5dp"
    card_view:cardBackgroundColor="#FAFAFA"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_layer"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvProviderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginTop="12dp"
            android:text="Hotel Govinda`s"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="5 min. ago"
            android:textColor="#C6E4FB"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/icon_Phone"
            style="@style/Icon"
            android:layout_below="@+id/tvProviderName"
            android:background="@drawable/ic_phone_24dp" />


        <TextView
            android:id="@+id/tvContact"
            style="@style/IconText"
            android:layout_alignTop="@+id/icon_Phone"
            android:autoLink="phone"
            android:linksClickable="true"
            android:text="9876543210" />

        <TextView
            android:id="@+id/icon_venue"
            style="@style/Icon"
            android:layout_below="@+id/tvContact"
            android:background="@drawable/ic_location_on_24dp" />


        <TextView
            android:id="@+id/tvAddress"
            style="@style/IconText"
            android:layout_alignTop="@+id/icon_venue"
            android:ellipsize="end"
            android:ems="12"
            android:maxLines="3"
            android:scrollHorizontally="true"
            android:singleLine="false"
            android:text="ISKCON NVCC, Kondhawa, Pune, India survey no. 50, Opposite Shatrunjay Mandir, Katraj Kondhawa Rd," />

        <TextView
            android:id="@+id/tvCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="6dp"
            android:ellipsize="end"
            android:text="@string/food_count"
            android:textColor="#d50000" />


        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="Distribute"
            android:textColor="#C6E4FB"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvDistribute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="6dp"
            android:drawablePadding="3dp"
            android:drawableRight="@drawable/dropping_hand_grey"
            android:text="Distribute Food"
            android:textColor="#a4ca19"
            android:textSize="14sp" />


        <Button
            android:id="@+id/bGetDirections"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="50dp"
            android:background="#ff6f00"
            android:text="Get directions"
            android:textSize="10sp" />


    </RelativeLayout>


</android.support.v7.widget.CardView>
