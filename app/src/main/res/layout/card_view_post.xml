<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_layer"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvProviderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hotel Govinda`s"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="5 min. ago"
                android:textColor="#C6E4FB"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/icon_Phone"
                style="@style/Icon"
                android:layout_below="@+id/tvProviderName"
                android:background="@drawable/ic_phone_24dp" />


            <TextView
                android:id="@+id/tvContact"
                style="@style/IconText"
                android:layout_alignTop="@+id/icon_Phone"
                android:text="9876543210" />

            <TextView
                android:id="@+id/icon_venue"
                style="@style/Icon"
                android:layout_below="@+id/tvContact"
                android:background="@drawable/ic_location_on_24dp" />


            <TextView
                android:id="@+id/tvAddress"
                style="@style/IconText"
                android:singleLine="false"
                android:layout_alignTop="@+id/icon_venue"
                android:ems="10"
                android:text="ISKCON NVCC, Kondhawa, Pune, India" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="6dp"
                android:text="Food available for 5 people"
                android:textColor="#d50000" />


            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="Distribute"
                android:textColor="#C6E4FB"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/distribute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDistribute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:layout_marginRight="3dp"
                    android:text="Distribute"
                    android:textColor="#a4ca19"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/ivHandIcon"
                    android:layout_width="30dp"
                    android:layout_height="17dp"
                    android:src="@drawable/droping_hand_grey" />

            </LinearLayout>


            <Button
                android:id="@+id/button"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="28dp"
                android:background="#ff6f00"
                android:text="Get directions"
                android:textSize="8sp" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>